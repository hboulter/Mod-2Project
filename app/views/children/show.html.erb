<h1><%= @child.name %></h1>

<div style="width:400px; height:auto">  
<%= image_tag(@child.image, style: 'width: 100%') %>
</div>

<h2>Age: <%= @child.age %></h2>
<h2>Bio: <%= @child.bio %></h2>


<ul>
  <% @toys.each do |toy|  %>
  <li>
  <%= link_to toy.name, toy.link %>
  </li>
  <%end%>

</ul>

<% if current_user %>
<h3>Would you like to make a donation today?</h3>

<%= form_with model: @donation do |f| %>
<input type ="hidden" id="user_id", name = "user_id" value= <%="#{current_user.id}"%>>
<input type ="hidden" id="child_id", name = "child_id" value= <%="#{@child.id}"%>>
<%= collection_select(:donation, :toy_id, @toys, :id, :name) %>  
<%= f.text_area :message %>
<%= f.submit "Create" %>
<% end %><br>

<h3>Messages: <h3>
<ul>
 <% @child_donations.each do|cd|%>
 <% donator = User.all.find{|u| u.id == cd.user_id}%>
 <li>
 <p><%= donator.username%> left you a message!<br> <%=cd.message%></p><br>
 </li>

 <%end%>
 
 </ul>

 <%else%>

 <h4>Sign in to make a donation to this lovely child.<h4>

 <%end %>
