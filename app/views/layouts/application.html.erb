<!DOCTYPE html>
<html>
  <head>

  </head>

  <body>




    <header>
      <% if signed_in? %>
        Signed in as: <%= current_user.username %>
        <%= button_to 'Sign out', sign_out_path, method: :delete %>
      <% else %>
        <%= link_to 'Sign in', sign_in_path %>
      <% end %>
    </header>

    

    <section>

      <div id="flash">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
      </div>
        <%= yield %>
    </section>


       
  </body>
</html>
